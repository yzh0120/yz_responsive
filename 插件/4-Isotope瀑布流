npm i vueisotope


 import isotope from 'vueisotope'
  export default { components: { isotope, } 
  
  
  <isotope :options='getOptions()' :list="list" @filter="filterOption=arguments[0]" @sort="sortOption=arguments[0]">
    <div v-for="element in list" :key="element.id">
      {{element.name}}
    </div>
  </isotope>